<% include partials/_header %>

    <div class="container">
        <div class="row mt-5">
            <div class="card text-dark bg-light mb-3 col-md-5">
                <div class="card-header bg-danger text-light text-center">EDIT CUSTOMER</div>
                <div class="card-body">
                    <h4 class="card-title">Customer <%= data.name.toUpperCase() %></h4>
                    <p class="card-text">Here you can update a customer! Woa.</p>
                    <form action="/update/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Type a name..." value="<%= data.name %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" placeholder="Type an address..." value="<%= data.address %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Type a phone..." value="<%= data.phone %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-danger">Update Customer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% include partials/_footer %>