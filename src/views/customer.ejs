<% include partials/_header %>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="bg-danger text-light">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) {
                            for(let item of data){ %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.name %></td>
                            <td><%= item.address %></td>
                            <td><%= item.phone %></td>
                            <td>
                                <a href="/edit/<%= item.id %>" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                <a href="/delete/<%= item.id %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        <% }
                    }%>
                    </tbody>
                </table>
            </div>

            <div class="card text-dark bg-light mb-3 col-md-5">
                <div class="card-header bg-danger text-light text-center">CREATE CUSTOMER</div>
                <div class="card-body">
                    <h4 class="card-title">Customer</h4>
                    <p class="card-text">Here you can add a new customer! Woa.</p>
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Type a name..." class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" placeholder="Type an address..." class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Type a phone..." class="form-control">
                        </div>
                        <button type="submit" class="btn btn-outline-danger">Add Customer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% include partials/_footer %>